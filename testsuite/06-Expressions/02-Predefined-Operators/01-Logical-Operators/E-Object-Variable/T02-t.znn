(** 
 * 6. Expression.
 * 6.2. Predefined Operators.
 * 6.2.2. Logical Operators.
 *
 * Positive test: boolean variables of object A.B are used in logical operator.
 * The object is declared before its variables are used.
 *)
object A.B;
	var { public } 
		p, q : boolean;
end B.

module Main;
	import A;

	var b : A.B;
begin
	b.p := true;
	b.q := false;

	if b.p or b.q 
	then halt(1) else halt(0) end;
end Main.
